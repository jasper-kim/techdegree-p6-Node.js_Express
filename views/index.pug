extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Let's make something magical!
      p.lead.text-light
        | Welcome to my portfolio site! This Node.js and Express site is a part of the projects to demonstrate my skills as a Full-stack JavaScript developer. Feel free to browse my work.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`)
            h5 #{project.project_name}
      
